// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
  "name": "C# (.NET) with Aspire",
  "image": "mcr.microsoft.com/devcontainers/dotnet:9.0",
  "containerEnv": {
    "IN_DEVCONTAINER": "true",
    "RIDER_DEVCONTAINER": "true"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash"
          },
          "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
          }
        },
        "dotnet.defaultSolution": "disable",
        "omnisharp.enableRoslynAnalyzers": true,
        "omnisharp.enableEditorConfigSupport": true,
        "files.watcherExclude": {
          "**/bin/**": true,
          "**/obj/**": true
        }
      },
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.vscodeintellicode-csharp",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "humao.rest-client",
        "davidanson.vscode-markdownlint",
        "editorconfig.editorconfig",
        "ms-vscode.remote-containers"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.aspire,target=/workspace/.aspire,type=bind",
    "source=E:\\github,target=/workspace/github,type=bind"
  ],
  "forwardPorts": [5000, 5001, 8080, 8081, 18888],
  "portsAttributes": {
    "5000": {
      "label": "HTTP",
      "onAutoForward": "notify"
    },
    "5001": {
      "label": "HTTPS",
      "onAutoForward": "notify"
    },
    "18888": {
      "label": "Aspire Dashboard",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "dotnet --version && dotnet workload list",
  "remoteUser": "vscode"
}