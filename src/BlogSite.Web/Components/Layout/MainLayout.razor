@inherits LayoutComponentBase

<div class="flex flex-col md:flex-row min-h-screen">
	<!-- Sidebar -->
	<div class="md:w-64 bg-gradient-to-b from-indigo-900 via-purple-900 to-purple-950 
                shadow-xl md:sticky md:top-0 md:h-screen">
		<NavMenu/>
	</div>

	<!-- Main content area -->
	<main class="flex-1 flex flex-col">
		<!-- Top bar with theme toggle -->
		<div class="sticky top-0 z-10 bg-gray-100 dark:bg-gray-800 
                    border-b border-gray-300 dark:border-gray-700 
                    px-4 py-3 md:px-8
                    shadow-sm transition-colors duration-200">
			<div class="flex items-center justify-end gap-4">
				<a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-sm text-gray-700 dark:text-gray-300 
                          hover:text-blue-600 dark:hover:text-blue-400
                          transition-colors duration-200 no-underline hover:underline">
					About
				</a>
				<ThemeToggle/>
			</div>
		</div>

		<!-- Page content -->
		<article class="flex-1 px-4 py-6 md:px-8 md:py-8
                        bg-white dark:bg-gray-900 
                        transition-colors duration-200">
			@Body
		</article>
	</main>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" class="hidden fixed bottom-0 left-0 right-0 z-50
            bg-yellow-100 dark:bg-yellow-900
            shadow-lg border-t-2 border-yellow-400 dark:border-yellow-600
            px-5 py-3
            transition-colors duration-200" data-nosnippet>
	<div class="flex items-center justify-between">
        <span class="text-gray-900 dark:text-gray-100">
            An unhandled error has occurred.
            <a href="." class="text-blue-600 dark:text-blue-400 hover:underline ml-2">Reload</a>
        </span>
		<button class="text-gray-900 dark:text-gray-100 hover:text-red-600 dark:hover:text-red-400
                       text-2xl font-bold cursor-pointer
                       transition-colors duration-200"
						onclick="document.getElementById('blazor-error-ui').style.display='none'">
			🗙
		</button>
	</div>
</div>