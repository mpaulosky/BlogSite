@page "/auth"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Auth</PageTitle>

<div class="max-w-2xl mx-auto">
	<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8
                border border-gray-200 dark:border-gray-700">
		<div class="flex items-center gap-4 mb-6">
			<div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center">
				<svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 16 16">
					<path
						d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
					<path
						d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5z"/>
				</svg>
			</div>
			<h1 class="text-3xl font-bold text-gray-900 dark:text-white">
				You are authenticated
			</h1>
		</div>

		<AuthorizeView>
			<div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 
                        rounded-lg p-4">
				<p class="text-lg text-gray-800 dark:text-gray-200">
					Hello <span
						class="font-semibold text-green-700 dark:text-green-400">@context.User.Identity?.Name</span>!
				</p>
			</div>
		</AuthorizeView>
	</div>
</div>